.search-top{
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 999;
    background: #fff;
}

.search{
    height: 120rpx;
    font-size: 36rpx;
    align-items: center;
    border-bottom: 2rpx solid #d8d8d8;
    box-sizing: border-box;
}

.search-l{
    flex: 3;
    height: 80rpx;
    padding: 20rpx 0 20rpx 20rpx;
}

.search-input{
    background: #f4f4f4;
    width: 100%;
    height: 100%;
    border-radius: 40rpx;
    font-size: 32rpx;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.input{
    width: 100%;
    height: 100%;
    margin-right: 20rpx;
}

.search-r{
    flex: 1.5;
    text-align: center;
    color: #02c6dc;
}

.gl{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.mode{
    width: 100%;
    height: 100%;
    background: #8896B1;
    opacity: .5;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 995;
}

.office-scroll{
    width: 100%;
    height: 100%;
    background: #fff;
    padding-top: 120rpx;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    z-index: 998;
}

.office-scroll-top{
    background: #fff;
    height: 324rpx;

}

.office-ul{
    height: 164rpx;
    padding: 0 30rpx;
    flex-wrap: wrap;
    overflow: hidden;
}

.office-ul view{
    font-size: 32rpx;
    height: 60rpx;
    line-height: 40rpx;
    padding: 10rpx 20rpx;
    margin-bottom: 30rpx;
    color: #02c6dc;
    margin-right: 20rpx;
    border: 2rpx solid #02c6dc;
    border-radius: 30rpx;
    box-sizing: border-box;
}

.programa{
    height: 80rpx;
    line-height: 80rpx;
    color: #596c92;
    font-size: 32rpx;
    padding-left: 30rpx;
}
.office-scroll-bottom{
    height: 760rpx;
    display: flex;
}

.office{
    padding: 0 10rpx;
    text-align: center;
    font-size: 32rpx;
    color: #596c92;
    line-height: 80rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
}



.photo{
    display: inline-block; 
    font-size: 32rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    color: #596c92;
  
}

.active1{
    color: #02c6dc;
    border-bottom: 2rpx solid #02c6dc;
    box-sizing: border-box;
}

.doctor{
    padding: 30rpx;
    background: #fff;
    border-bottom: 2rpx solid #d8d8d8;
}

.doctor-l{
    flex: 0.8;
}

.doctor-l-img{
    width: 120rpx;
    height: 120rpx;
    /* background: #8896B1; */
    border-radius: 50%;
    position: relative;
   
}

.v{
    width: 50rpx;
    height: 50rpx;
    /* padding: 10rpx; */
    /* background: #FFB82C; */
    border-radius: 50%;
    /* border: 2rpx solid #fff; */
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    right: -10rpx;
}

.doctor-r{
    flex: 3;
    color: #8896B1;
    font-size: 32rpx;
    padding-top: 10rpx;
}

.doctor-r view{
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
}