page{
    background: #f4f4f4;
    font-size: 32rpx;
}

.row{
    padding: 0 40rpx;
    border-bottom: 2rpx solid #d8d8d8;
    line-height: 100rpx;
    background: #fff;
}

.head{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    background: #eee;
}

.clickhead{
    color: #fff;
    font-size: 32rpx;
    background: #02c6dc;
    line-height: 60rpx;
    
}

.input{
    width:100%;
    height: 100%;
    text-align: right;
}

.flex-l{
    flex: 1;
}

.flex-r{
    flex: 4;
}

.title{
    background: #f4f4f4;
    color: #777;
    font-size: 32rpx;
    line-height: 80rpx;
    padding: 0 40rpx;
}

.uploading{
    justify-content: space-between;
    padding: 0 40rpx;
    background: #fff;
    border-bottom: 2rpx solid #d8d8d8;
    line-height: 100rpx;
    align-items: center;
}

.gl{
    width: 30rpx;
    height: 30rpx;
}

.p-btn{
    background: #02c6dc;
    color: #fff;
    font-size: 34rpx;
    margin: 40rpx;
    border-radius: 0;
}

.infuse{
    font-size: 28rpx;
    color: red;
    padding: 40rpx;
    line-height: 45rpx;
    text-align: justify;
}

.card{
    background: #fff;
    padding: 40rpx;
    border-bottom: 2rpx solid #d8d8d8;
}

.card-view{
    width: 100%;
    height: 300rpx;
    border: 2rpx solid #d8d8d8;
    margin: 20rpx 0;
    text-align: center;
    color: #777;
    position: relative;
}


.icon{
    position: absolute;
    right: -30rpx;
    top: -30rpx;
}
