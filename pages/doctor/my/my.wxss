.banner{
    height: 400rpx;
    position: relative;
    overflow: hidden;
}

.set{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 30rpx;
    left: 30rpx;
}

.gift{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}

.inform{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 30rpx;
    left: 100rpx;
}

.banner-img{
    width: 150rpx;
    height: 150rpx;
    border: 4rpx solid #fff;
    border-radius: 50%;
    position: absolute;
    top: 40rpx;
    left: 50%;
    margin-left:-75rpx;
}

.grade{
    width: 100%;
    height: 160rpx;
    position: absolute;
    bottom: 20rpx;
}

.name{
    text-align: center;
    font-size: 36rpx;
    /* font-weight: 600;  */
    color: #fff;
}

.concent{
    background: #fff;
    padding: 0 30rpx;
    margin-top: 20rpx;
    position: relative;
}

.column{
    height: 100rpx;
    border-bottom: 2rpx solid #ddd;
    justify-content: space-between;
    position: relative;
}

.column-name{
     font-size: 32rpx;
     line-height: 100rpx;
     color: #122d64;
     align-items: center;
}

.gl1{
    width: 30rpx;
    height: 30rpx;
    margin-top: 35rpx;
}

.phone{
    line-height: 100rpx;
    color:  #02c6dc;
}

.column-show{
    font-size: 28rpx;
    color: #8896B1;
    border-bottom: 2rpx solid #ddd;
    padding: 20rpx 0 20rpx 40rpx;
}

.column-show view{
    line-height: 60rpx;
}

.progress{
    width: 90%;
    position: absolute;
    bottom: 30rpx;
    left: 5%;
    z-index: 999;
    font-size: 32rpx;
    color: #eee;
}

.grade1{
    /* flex: 1; */
    text-align: center;
} 

.percent{
    flex: 2;
} 

.percent-view{
    width: 100%;
    height: 6rpx;
    background: #eee;
    border-radius: 5rpx;
    margin-top: 25rpx;
}

.grade1-img{
    width: 30rpx;
    height: 30rpx;
    margin-top: 14rpx; 
}

.slidingBlock{
    height:100%;
    border-radius: 5rpx;
    background: #ffb72c;
}

.btnn{
    width: 100%;
    height: 100%;
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

.btn{
    width: 90%;
    background: #02c6dc;
    color: #fff;
    font-size: 36rpx;
    margin: 30rpx auto;
}
