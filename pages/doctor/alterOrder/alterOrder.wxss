.title{
    background: #fff;
    text-align: center;
    font-size: 34rpx;
    border-bottom: 2rpx solid #eee;
}
.title-data{
    flex: 2;
    padding: 30rpx 0;
}
.title-time{
    flex: 2;
    border-left: 2rpx solid #eee;
    border-right: 2rpx solid #eee;
    padding: 30rpx 0;
    
}
.title-num{
    flex: 1;
    border-right: 2rpx solid #eee;
    padding: 30rpx 0;
   
}
.title-money{
    flex: 1;
    padding: 30rpx 0;
    
}


.height{
     line-height: 100rpx;
}

.add{
    background: #fff;
    padding:0 30rpx;
    border-bottom: 2rpx solid #eee;
    font-size: 32rpx;
}

.title-add{
    flex:1;
    border-right: 2rpx solid #eee;
    text-align: left;
    padding-top: 30rpx;
}

.title-text{
    flex:5;
    padding: 30rpx 20rpx;
}

.input{
    width: 100%;
    height: 100%;
    text-align: center;
}

.textarea{
    width: 100%;
    position: relative;
}

.li{
    margin-bottom: 20rpx;
}

.append{
    background: #fff;
    padding: 30rpx;
    text-align: center;
    color: #FF7877;
    font-size: 36rpx; 
}

.state{
    background: #fff;
    border-bottom: 2rpx solid #ddd;
    padding: 20rpx 0;
    justify-content: flex-end;
}

.cancel{
    height: 60rpx;
    background: #FF7877;
    color: #fff;
    font-size: 34rpx;
    margin: 0 20rpx;
    border-radius: 30rpx;
    line-height: 60rpx;
    padding: 0 40rpx;
}

.confirm{
    height: 60rpx;
    background: #41C7D6;
    color: #fff;
    font-size: 34rpx;
    margin: 0 40rpx 0 20rpx;
    border-radius: 30rpx;
    line-height: 60rpx;
    padding: 0 40rpx;
}

.infuse{
    font-size: 30rpx;
    color: #FF7877;
    padding: 40rpx;
}

picker{
    width: 45%;
    height: 100%;
}