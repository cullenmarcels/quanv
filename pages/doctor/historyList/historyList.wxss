.search{
    width: 100%;
    height: 120rpx;
    background: #fff;
    padding: 25rpx 0;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    z-index: 999;
}

.search-from{
    background: #eee;
    width: 90%;
    height: 70rpx;
    margin:0 auto;
    border-radius: 15rpx;
}

input{
    width: 100%;
    height: 100%;
    padding-left: 20rpx;
    font-size: 32rpx; 
    line-height: 70rpx;
}

icon{
    margin: 15rpx 30rpx;
}  

.list{
    border-bottom: 2rpx solid #ddd;
    padding: 30rpx 20rpx 20rpx 0;
}

.flex-l{
    flex: 1;
}

.flex-l-img{
    width: 120rpx;
    height: 120rpx;
    background: #8896B1;
    margin: 0 auto;
    border-radius: 50%;
}

.flex-r{
    flex: 3;
}

.name{
    font-size: 36rpx;
    font-weight: 600;
    line-height: 50rpx;
}

.age{
    font-size: 32rpx;
    color: #8896B1;
    line-height: 50rpx;
}

.sex{
    margin: 0 20rpx;
    font-size: 32rpx;
    color: #8896B1;
    line-height: 50rpx;
}

.number{
    font-size: 28rpx;
    color: #8896B1;
    line-height: 55rpx;
}

.headline{
    font-size: 32rpx;
    color: #8896B1;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
}

.gl2{
    width: 40rpx;
    height: 40rpx;
}

.headline-time{
    font-size: 28rpx;
    color: #8896B1;
    margin-top: 20rpx;
}

