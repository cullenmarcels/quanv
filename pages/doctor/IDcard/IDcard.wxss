.card{
    /* height: 500rpx; */
    background: #fff;
    margin-top: 20rpx;
    padding: 40rpx 60rpx 0;
    box-sizing: border-box;
    border-bottom: 2rpx solid #ddd;
}

.dashed{
    width: 100%;
    height: 380rpx;
    margin: 0 0 40rpx 0;
    border:  2rpx solid #000;
    position: relative;
}

.explain{
    margin-top: 20rpx;
    padding: 0 60rpx;
}

.explain-img{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.explain text{
    line-height: 60rpx;
    font-size: 32rpx;
    margin-left: 20rpx;
    color: #FF7877; 
}

.explain1{
    line-height: 60rpx;
    font-size: 32rpx;
    padding-left: 120rpx;
    color: #FF7877; 
}

button{
    width: 85%;
    height: 80rpx;
    margin-top: 30rpx;
    font-size: 40rpx;
    background:  #02c6dc;
    color: #fff;
    line-height: 80rpx;
}

.click{
    width: 400rpx;
    height: 400rpx;
    margin: 0 auto;
    padding-top: 70rpx;
    text-align: center;
    box-sizing: border-box;
}

.pus{
    width: 200rpx;
    height: 200rpx;
    border: 2rpx solid #ddd;
    border-radius: 50%;
    margin: 0 auto 30rpx;
    box-sizing: border-box;
}

.plus{
    width: 80rpx;
    height: 80rpx;
    background: #ddd;
    margin: 60rpx auto;
    clip-path: polygon(0 36rpx,36rpx 36rpx,36rpx 0, 44rpx 0,44rpx 36rpx, 80rpx 36rpx,80rpx 44rpx,44rpx 44rpx, 44rpx 80rpx,36rpx 80rpx, 36rpx 44rpx, 0 44rpx);
}

.close{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: -30rpx;
    top: -30rpx;
}

