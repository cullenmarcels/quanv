    padding: 20rpx 0;
    line-height: 50rpx;
}

.achievement-r{
    flex: 3;
    font-size: 34rpx;
    display: flex;
    align-items: center;
   
}

.speciality-rr{
    flex: 3;
    height: 100%;
    font-size: 32rpx;
    color: #596c92;    
    text-align: center;
    position: relative;
}

.close{
    position: absolute;
    right: -30rpx;
    top: 0;
}

textarea{
    background: #f4f4f4;
    width: 100%;
    height: 140rpx;
    min-height:140rpx;
    padding: 20rpx; 
