    text-align: justify;
    box-sizing: border-box;
    font-size: 34rpx;
    color: #596c92;
    /* height: 100%; */
}

.speciality-l{
    flex: 1;
    font-size: 34rpx;
    padding: 20rpx 0;
    line-height: 50rpx;
}

.speciality-r{
    flex: 5;
}

.adept{
    font-size: 34rpx;
    color: #596c92;
