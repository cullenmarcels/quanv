@import "/template/nav/nav.wxss";

.li{
    border-bottom: 2rpx solid #ddd;
    padding: 30rpx 0;
    background: #fff;
}

.li-l{
    flex: 1.8;
}

.li-l-img{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: #41C7D6;
    margin: 0 auto;
}

.li-r{
    flex: 5;
    padding-right: 30rpx;
    font-size: 32rpx;
}

.name{
    justify-content: space-between;
    padding-top: 20rpx;
    align-items: flex-end;
}

.name view{
    /* line-height: 50rpx; */
    color: #8896B1;
}

.li-concent{
    color: #8896B1;
    flex: 12;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
}

.notread{
    flex: 1;
    background: red;
    color: #fff;
    font-size: 26rpx;
    padding: 5rpx 10rpx;
    border-radius: 20rpx;
    line-height: 30rpx;
    margin-left: 10rpx;
}

.search{
    padding: 40rpx;
    border-bottom: 2rpx solid #ddd;
}

.search-view{
    background: #eee;
    height: 80rpx;
    border-radius: 10rpx;
    padding: 0 20rpx;
}

input{
    width: 100%;
    height: 100%;
    font-size: 32rpx;
}
icon{
    margin-top: 20rpx;
}