.view{
    width: 100%;
    /* height: 400rpx; */
    background: #fff;
}

.state{
    text-align: center;
    color: #FF7877;
    font-size: 36rpx;
    font-weight: 600;
    line-height: 100rpx;
    background: #fff;
}
button{
    background: #41C7D6;
    color: #fff;
    width: 90%;
    margin-bottom: 50rpx;
}

.concent{
    background: #fff;
    margin-top: 20rpx; 
    padding: 40rpx;
}

.concent-title{
    font-size: 40rpx;
    font-weight: 600;
    margin-bottom: 40rpx;
    color: #122d64;
}

.item{
    font-size: 32rpx;
    color: #122d64;
}

.itemShow{
    font-size: 32rpx;
    line-height: 45rpx;
    margin: 20rpx 0;
    color: #596c92;
}

.time{
    font-size: 28rpx;
    color: #8896B1;
    padding: 20rpx 0;
}

.infuse{
    font-size: 28rpx;
    color: #FF7877;
    padding: 40rpx;
    line-height: 40rpx;
}

.money1{
    font-size: 32rpx;
    color: #41C7D6;
    margin-bottom: 20rpx;
}

.message{
    font-size: 32rpx;
    font-weight: 600;
    line-height: 45rpx;
    padding: 20rpx 0;
}

.show{
    background: #fff;
    font-size: 30rpx;
    color: #8896B1;
    padding: 20rpx 0;
    justify-content: space-between;
    align-items: flex-end;
    vertical-align: super
}

.img{
    width: 40rpx;
    height: 40rpx;
    vertical-align: sub;
    margin-right: 5rpx;
}

.intro{
    background: #fff;
    padding: 20rpx 0;
    margin-top: 0;
    text-align: justify;
}

.redact-title{
    justify-content: space-between;
    padding-bottom: 20rpx;
}

.redact-title-l{
    font-size: 36rpx;
    font-weight: 600;
    color: #41C7D6; 
}

.redact-title-l text{
    font-size: 28rpx;
    font-weight: 500;
    color: #8896B1; 
}

.redact-img{
    width: 40rpx;
    height: 40rpx;
}

.redact{
    border-top: 2rpx solid #ddd;
    padding: 30rpx 0;
}

.redact-l{
    flex: 1;
}

.redact-l-img{
    width: 100rpx;
    height: 100rpx;
    background: #41C7D6;
    border-radius: 50%;
}

.redact-r{
    flex: 4;
}

.redact-name{
    font-size: 32rpx;
    line-height: 50rpx;
}

.redact-time{
    font-size: 32rpx;
    line-height: 50rpx;
    color: #8896B1;
}

.redact-c{
    font-size: 32rpx;
    line-height: 45rpx;
    margin-top: 20rpx;
}

.praise{
    justify-content: flex-end;
    margin-top: 20rpx;
}

.praise text{
    font-size: 36rpx;
    color:#8896B1;
    margin-right: 20rpx;
}

.praise-img{
    width: 40rpx;
    height:40rpx;
    vertical-align: sub;
    margin: 0 20rpx;
}

.controls {
    width: 320rpx;
    position: relative;
    bottom: 0; 
    border-radius: 42rpx;
    z-index: 999; 
    left: 50%;
    margin-left: -160rpx;
    padding: 20rpx 40rpx;
    margin-top: -42rpx;
    color: white;
    background: #FF7877;
    font-size: 32rpx;
    text-align: center;
    box-sizing: border-box;
}


.handle{
    justify-content: space-between;
    font-size: 30rpx;
    color: #8896b1;
    padding: 20rpx 0;
}