.advertising{
    padding: 20rpx 0;
    background: #eee;
}

.advertising-img{
    width: 100%;
    height: 300rpx;
}

.swiper{
    width: 50%;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    font-size: 40rpx;
    font-weight: 600;
    color: #fff;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
}

.swiper-title{
    font-size: 44rpx;
    font-weight: 600;
    color: #FF7777; 
    line-height: 60rpx;
}

.swiper-lecture{
    font-size: 36rpx;
