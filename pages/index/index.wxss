.banner{
    position: relative;
}

.accredit{
    width:100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
    display: flex;
    align-items: center;
    justify-content: center;
    
}

.accredit-view{
    width: 400rpx;
    height: 400rpx;
    background: #fff;
    border: 2rpx solid #eee;
    border-radius: 10rpx;
    position: relative;
}

.accredit-btn{
    background: #02c6dc;
    color: #fff;
    width: 100%; 
    font-size: 32rpx;
    line-height: 80rpx;
    position: absolute;
    left: 0;
    bottom: 0;
}

.search{
    width: 88%;
    height: 70rpx;
    background: #000;
    opacity: 0.3;
    position: absolute;
    top: 30rpx;
    left: 6%;
    z-index: 999;
    border-radius: 40rpx;
    padding: 10rpx 40rpx;
    box-sizing: border-box;
    color: #fff;
    font-size: 32rpx;
    line-height: 50rpx; 
}

.search icon{
    position: absolute;
    right: 30rpx;
    top: 20rpx;
}

.bannerName{
    font-size: 60rpx; 
    font-style: italic;
    color: #fff;
    position: absolute;
    left: 10%;
    bottom: 170rpx;
    
}

.bannerFunction{
    font-size: 46rpx;
    color: #fff;
    position: absolute;
    left: 10%;
    bottom: 90rpx;
}

.Responder{
    height: 116rpx;
    text-align: center;
    /* padding: 30rpx 0; */
    background: #fff;
    box-sizing: border-box;
}

.Responder image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.Responder text{
    color: #FF7877; 
    font-size: 36rpx;
    line-height: 116rpx;
    margin: 0 10rpx;
    vertical-align: middle;
}

.ul{
    flex-wrap: wrap;
    justify-content: space-around;
    border-bottom: 2rpx solid #ccc;
    border-top: 2rpx solid #ccc;
    background: #fff;
}

.li{
    width: 25%; 
    height: 210rpx;
}

.ul .text{
    font-size: 28rpx;
    text-align: center;
}

.img{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: #02c6dc ;
    margin: 30rpx auto 20rpx;
    box-sizing: border-box;
    position: relative;
}

.img text{
    color: red;
    font-size:20rpx;
    position: absolute;
    top: 18rpx;
    right: 18rpx;
}

