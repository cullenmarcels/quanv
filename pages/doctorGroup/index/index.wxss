/**index.wxss**/

page {
  display: block;
  min-height: 100%;
}

.top40 {
  margin-top: 20rpx;
}

.white {
  background-color: #fff;
}

/* createButton */

.groupCreate {
  height: 100rpx;
  padding: 0 40rpx;
}

.groupPlusImg {
  width: 56rpx;
  height: 56rpx;
  padding-top: 24rpx;
}

.groupPlusInfo {
  margin-left: 22rpx;
  padding-top: 30rpx;
  font-size: 32rpx;
  color: #02c6dc;
}

.moreImg {
  width: 18rpx;
  height: 30rpx;
  padding-top: 36rpx;
}

/* myGroup */

.pad40 {
  padding: 0 40rpx;
}

.myGroup {
  font-size: 32rpx;
}

.title {
  height: 100rpx;
  font-size: 32rpx;
  color: #172e60;
  line-height: 100rpx;
  border-bottom: 1rpx solid #d8d8d8;
}

.tit_ico {
  width: 8rpx;
  height: 40rpx;
  margin-right: 10rpx;
  padding-top: 32rpx;
  line-height: 100rpx;
}

.myGroup_cont {
  position: relative;
  padding: 50rpx 40rpx;
}

.myGroup_contMsg {
  margin-left: 40rpx;
}

.contMsg_name {
  font-size: 32rpx;
  color: #02c6dc;
}

.contMsg_data {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #8896b1;
}

.contMsg_msg {
  margin-top: 25rpx;
  font-size: 28rpx;
  color: #8896b1;
}

.myGroup_more {
  position: absolute;
  width: 18rpx;
  height: 30rpx;
  margin: -15rpx 0 0 -60rpx;
  top: 50%;
  left: 100%;
}

.jioned {
  padding: 15rpx 40rpx;
  color: #8896b1;
}

.listBox {
  padding: 0 40rpx;
  background-color: #fff;
}

.list {
  position: relative;
  padding: 30rpx 0;
}

.listBox .list:nth-child(even) {
  border-top: 1px solid #d8d8d8;
}

.listR {
  margin-left: 28rpx;
}

.list .more {
  position: absolute;
  width: 80rpx;
  height: 40rpx;
  top: 50rpx;
  right: 0;
  z-index: 666;
}
/* 搜索框 */
.flex{
  display: flex
}
.search-top{
    width: 100%;
    background: #fff;
}

.search{
    height: 130rpx;
    align-items: center;
}

.search-l{
    flex: 3;
    height: 56rpx;
    padding: 10rpx 40rpx 10rpx 40rpx;
}

.search-input{
    background: #f4f4f4;
    width: 100%;
    height: 100%;
    border-radius: 28rpx;
    align-items: center;
    padding: 15rpx 30rpx;
    box-sizing: border-box;
}

.input{
    width: 100%;
    height: 56rpx;
    margin-right: 20rpx;
}

.search-r{
    flex: 1.5;
    text-align: center;
    color: #02c6dc;
}

.gl{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
